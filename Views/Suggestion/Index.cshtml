@using CustomerRelationsManagementDomain.Entities;
@model List<Suggestion>

@{
    
    Layout = "../DefaultLayout/Index";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Müşteri Paneli</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">

                @foreach (var suggestion in Model)
                {
                     <div class="x_panel">
                        <div class="x_title">
                            <h2>@suggestion.Customer.CompanyName <small>@suggestion.Customer.ContactPerson</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                           
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content form-horizontal form-label-left  ">

    
                                    <div class="item form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="subject">
                                            Konu <span class="required"></span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input id="subject" readonly class="form-control col-md-7 col-xs-12" asp-for="@suggestion.Subject"  type="text">
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="description">
                                            Açıklama <span class="required"></span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <textarea id="description" readonly asp-for="@suggestion.Description"  class="form-control col-md-7 col-xs-12"></textarea>
                                        </div>
                                    </div>
                        </div>
                     </div>
                    
                }

              
            </div>
        </div>
    </div>
</div>


