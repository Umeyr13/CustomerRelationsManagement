@model EmployeeModel

@{
    ViewBag.Title = "aaa";
    Layout = "../DefaultLayout/Index";
}


<div class="section" style="margin: 5px; display:inline-table; ">
    <h2>Müşteriler</h2>

    <p>
        @Html.ActionLink("Yeni Kullanıcı", "Create", null, new { @class = "btn btn-success btn-xs" })
    </p>

    <table class="table">
        <tr>
            <th>
                Şirket Adı
            </th>
            <th>
                İletişim Kurulan Kişi
            </th>
            <th>
                Email adresi
            </th>
            <th>
                Telefon Numarası
            </th>
            <th>
                
            </th>
        </tr>

        @foreach (var item in Model.allCustomers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName) 
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
              
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


</div>

